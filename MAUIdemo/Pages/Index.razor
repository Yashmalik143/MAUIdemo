@inject IProductService ProductService;
@page "/"
@using MAUIdemo.Model;
@using MAUIdemo.Service;

<h1>Hello, world!</h1>

Welcome to your new app.

<h1>Hello, world!</h1>


@if (_studentList == null)
{
    <p>dfvsd....</p>
}
else
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>ProductName</th>
                    <th>Price</th>
                    <th>CategoryID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in _studentList)
                {
                    <tr>
                        <td>@student.id</td>
                        <td>@student.productName</td>
                        <td>@student.price</td>
                        <td>@student.categoryID</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {

    List<Product> _studentList;
    protected override async Task OnInitializedAsync()
    {
        _studentList = await ProductService.GetAllProduct();
    }
}